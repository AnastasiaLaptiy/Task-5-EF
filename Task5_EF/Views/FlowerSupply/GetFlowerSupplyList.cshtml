        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FlowerModel.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SupplyModel.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
