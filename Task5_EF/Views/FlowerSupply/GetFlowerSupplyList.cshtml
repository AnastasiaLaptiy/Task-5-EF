@model IEnumerable<Task5_EF.Models.FlowerSupplyModel>

@{
    ViewBag.Title = "Get FlowerSupply List";
}

<h2>Get FlowerSupply List</h2>

<p>
    @Html.ActionLink("Create New", "CreateFlowerSupply")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FlowerModel.Name)
        </th>
